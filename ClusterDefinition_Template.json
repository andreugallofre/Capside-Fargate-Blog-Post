{
   "Metadata":{
      "StackVersion":3
   },
   "Resources":{
      "Cluster":{
         "Properties":{
            "ClusterName":"KpisEcsCluster"
         },
         "Type":"AWS::ECS::Cluster"
      },
      "ECSTaskLogGroup":{
         "Properties":{
            "LogGroupName":"/ecs/Capside-Blog-Post",
            "RetentionInDays":5
         },
         "Type":"AWS::Logs::LogGroup"
      },
      "ExecutionRole":{
         "Properties":{
            "AssumeRolePolicyDocument":{
               "Statement":[
                  {
                     "Action":[
                        "sts:AssumeRole"
                     ],
                     "Effect":"Allow",
                     "Principal":{
                        "Service":[
                           "ecs-tasks.amazonaws.com"
                        ]
                     },
                     "Sid":""
                  }
               ]
            },
            "ManagedPolicyArns":[
               "arn:aws:iam::aws:policy/service-role/AmazonECSTaskExecutionRolePolicy"
            ],
            "Path":"/",
            "RoleName":"ECSRunTaskRole"
         },
         "Type":"AWS::IAM::Role"
      }
   }
}
